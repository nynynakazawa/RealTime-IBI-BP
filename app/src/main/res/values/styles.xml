<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- テーマ -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#78CCCC</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#707070</item>
        <item name="android:navigationBarColor">#1e3333</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- モニタリングデータ用テキスト -->
    <style name="CustomSpinnerText" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#58BC82</item>
    </style>

    <!-- アニメーション付きボタン -->
    <style name="Widget.App.AnimatedButton" parent="Widget.MaterialComponents.Button">
        <!-- 背景をリップル対応のシェイプドローアブルに設定 -->
        <item name="android:background">@drawable/bg_animated_button</item>
        <item name="android:insetLeft">4dp</item>
        <item name="android:insetRight">4dp</item>
        <item name="android:stateListAnimator">@animator/btn_elevation</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>